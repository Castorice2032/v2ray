{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ProxyNode",
  "type": "object",
  "required": ["raw", "tag", "type", "config"],
  "properties": {
    "raw":  { "type": "string" },
    "tag":  { "type": "string" },
    "type": { "enum": ["ss", "vmess", "vless", "trojan", "hysteria2"] },

    "config": {
      "oneOf": [
        { "$ref": "#/$defs/ssConfig" },
        { "$ref": "#/$defs/vmessConfig" },
        { "$ref": "#/$defs/vlessConfig" },
        { "$ref": "#/$defs/trojanConfig" },
        { "$ref": "#/$defs/hysteria2Config" }
      ]
    },

    "meta": { "type": "object" }
  },

  "$defs": {

    "ssConfig": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type":   { "const": "ss" },
        "server": { "type": "string" },
        "port":   { "type": "integer" },
        "cipher": { "type": "string" },
        "password": { "type": "string" },
        "udp": { "type": "boolean", "default": false }
      },
      "additionalProperties": false
    },

    "trojanConfig": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type":   { "const": "trojan" },
        "server": { "type": "string" },
        "port":   { "type": "integer" },
        "password": { "type": "string" },
        "tls": {
          "type": "object",
          "required": ["enabled"],
          "properties": {
            "enabled":  { "const": true },
            "sni":      { "type": "string" },
            "insecure": { "type": "boolean", "default": false }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },

    "vmessConfig": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type":   { "const": "vmess" },
        "server": { "type": "string" },
        "port":   { "type": "integer" },
        "uuid":   { "type": "string" },
        "alter_id": { "type": "integer", "default": 0 },
        "tls": { "$ref": "#/$defs/tlsCommon" },
        "transport": { "$ref": "#/$defs/wsGrpcCommon" }
      },
      "additionalProperties": false
    },

    "vlessConfig": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type":   { "const": "vless" },
        "server": { "type": "string" },
        "port":   { "type": "integer" },
        "uuid":   { "type": "string" },
        "flow":   { "type": "string", "default": "" },
        "tls": { "$ref": "#/$defs/tlsCommon" },
        "transport": { "$ref": "#/$defs/wsGrpcCommon" }
      },
      "additionalProperties": false
    },

    "hysteria2Config": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type":   { "const": "hysteria2" },
        "server": { "type": "string" },
        "port":   { "type": "integer" },
        "password": { "type": "string" },
        "tls": {
          "type": "object",
          "required": ["enabled", "insecure"],
          "properties": {
            "enabled":  { "const": true },
            "sni":      { "type": "string" },
            "insecure": { "type": "boolean" }
          },
          "additionalProperties": false
        },
        "opts": {
          "type": "object",
          "properties": {
            "obfs": { "type": "string" },
            "obfs_password": { "type": "string" },
            "fingerprint": { "type": "string" }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },

    "tlsCommon": {
      "type": "object",
      "required": ["enabled"],
      "properties": {
        "enabled" : { "type": "boolean" },
        "sni"     : { "type": "string" },
        "insecure": { "type": "boolean", "default": false },
        "alpn"    : {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "additionalProperties": false
    },

    "wsGrpcCommon": {
      "type": "object",
      "properties": {
        "type":  { "enum": ["ws", "grpc", "none"] },
        "path":  { "type": "string" },
        "host":  { "type": "string" },
        "service_name": { "type": "string" }
      },
      "additionalProperties": false
    }
  }
}
